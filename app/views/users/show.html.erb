<% provide(:title, @user.email) %>
<div class="row">

    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p class="center">
      <span class="glyphicon glyphicon-time"></span>
      Join time:<%= @user.created_at %>
      <span class="glyphicon glyphicon-map-marker"></span>
      City:<%= @user.city%>
      </p>
    </section>


  <div class="col-md-8">
  <h3 class="center">Posts (<%= @user.posts.count %>)</h3>
  <% if @user.posts.any? %>
    <ol class="posts">
      <%= render @posts %>
    </ol>
  <% end %>
  </div>
  
  <div class="col-md-8">
    <h3 class="center">Comments (<%= @user.comments.count %>)</h3>
    <% if @user.comments.any? %>
    <ol class="posts">
      <%= render @comments %>
    </ol>
  <% end %>
  </div>



</div>