<% provide(:title, @user.email) %>
<div class="row">

    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>

      <h3>
      </h3>
    </section>


  <div class="col-md-8">
  <h3>Posts (<%= @user.posts.count %>)</h3>
  <% if @user.posts.any? %>
    <ol class="posts">
      <%= render @posts %>
    </ol>
  <% end %>
  </div>
  
  <div class="col-md-8">
    <h3>Comments (<%= @user.comments.count %>)</h3>
    <% if @user.comments.any? %>
    <ol class="posts">
      <%= render @comments %>
    </ol>
  <% end %>
  </div>



</div>