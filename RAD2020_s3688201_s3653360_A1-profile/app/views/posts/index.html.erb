<% provide(:title, 'Home') %>

<div class="mainbody">



  <div class="col-md-8">

    <nav class="navbar navbar-light bg-light">
      <div class="list-group">
      <div class="list-group-a post-buttons">
        <%= link_to "Recent Post", root_path, class: "list-group-item" %>
        <%= link_to "Selected Post", root_path, class: "list-group-item" %>
        <%= link_to "My Settings", '#',class: "list-group-item" %>
      </div>
        <form class="form-inline my-2 my-lg-0 post-buttons">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search" name="search">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
          </div>
        </form>
      <div class="post-buttons">
        <%= link_to "New Post", '/newpost' ,class: "btn btn-success" %>
        </div>
      </div>

      


      
    </nav>

    <section class="postslist">
    <%= render 'post' %>
    </section>
  </div>

  <div class="col-md-4">
    <section class="members">
      <%= render 'shared/member' %>
    </section>

    <section class="topic">
      <%= render 'shared/topic' %>
    </section>

    <section class="Post">
      <%= render 'shared/mostviewspost' %>
    </section>

    <section class="Links">
    <%= render 'shared/links' %>
    </section>
  </div>
  
</div>